<%= form_tag update_many_opportunities_path do %>

  <div class='form-wrap row'>
  <div class="span12">


    <div class="opportunity_list">
      <% @opportunities.each do |opportunity| %>
        <div class="opp">
        <%= render 'opportunities/historical_update', :opportunity => opportunity, :historical => true %>
      </div>
    <% end %>

      <% if @opportunities.count == 0 %>
        <div class="opp">
        <%= render 'opportunities/historical', :opportunity => Opportunity.new, :historical => true %>
      </div>
    <% end %>
    </div>
    <%= render 'opportunities/historical', :opportunity => Opportunity.new, :hidden => true, :historical => true %>

    <div class="row">
      <div class="span2">
        <%= link_to "Previous", :back, :class => 'btn btn-large btn-primary roundedge' %>
      </div>

      <div id="right-buttons" class="span4">
        <a id='add_opportunity' class="btn btn-large btn-primary roundedge">Add Another</a>
        <%= submit_tag 'Save', :class => 'btn btn-large btn-primary roundedge' %>
      </div>


    </div>
  </div>
</div>
<% end %>

