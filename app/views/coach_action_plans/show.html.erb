<%= stylesheet_link_tag "application/coach_action_plans", :media => "all" %>
<center>
  <h1 class="ap_blue" style="font-size:50px;">Mentor Action Plan</h1>
  <h4 style="font-weight:normal;">created for <%= @coach_action_plan.user.name %> and <%= @coach_action_plan.participant.name %> </h4>
</center>

<div class="span12">

  <div class="span3" style="margin-left:100px;">
    <center>
      <h2 class="ap_blue">Advisor</h2>
      <%= link_to image_tag(@coach_action_plan.user.avatar.url, :style => "border-radius:60px;"), user_path(@coach_action_plan.user) %>
      <br/>
      <br/>
      <div class="ap_blue" style="font-size:18px;"><%= link_to @coach_action_plan.user.name, user_path(@coach_action_plan.user) %></div>
    </center>
  </div>

  <div class="span3" style="padding-top:100px;">
    <center>
      <div class="ap_black" style="font-size:100px;">&amp;</div>
    </center>
  </div>

  <div class="span3">
    <center>
      <h2 class="ap_green">Participant</h2>
      <%= link_to image_tag(@coach_action_plan.participant.avatar.url, :style => "border-radius:60px;"), user_path(@coach_action_plan.participant) %>
      <br/>
      <br/>
      <div class="ap_green"><%= link_to @coach_action_plan.participant.name, user_path(@coach_action_plan.participant) %></div>
    </center>
  </div>

</div>

<div class="span12 row" style="padding-top:40px;">
  <div class="span5">
    <div class="row">
      <label class="ap_blue span2" >Start Date</label> <label style="margin-left:6px; margin-top:2px;" class="span1"><%= @coach_action_plan.start_date.strftime("%m/%d/%Y") %></label>
    </div>
  </div>

  <div class="span3">
    <div class="row">
      <label class="ap_blue span2" >End Date</label> <label style="margin-left:6px; margin-top:2px;" class="span1"><%= @coach_action_plan.end_date.strftime("%m/%d/%Y") %></label>
    </div>
  </div>
</div>

<div class="span11">
  <h2 class="ap_blue" style="margin-bottom:0px;">Goals</h2>
  <div style="word-wrap:break-word;"><%= @coach_action_plan.goals %></div>
</div>

<div class="span11">
  <div class="span5">
    <h2 class="ap_blue">Advisor's Action Items</h2>
    <div style="word-wrap:break-word;"><%= @coach_action_plan.coach_action_items %></div>
  </div>

  <div class="span5">
    <h2 class="ap_green">Participant's Action Items</h2>
    <div style="word-wrap:break-word;"><%= @coach_action_plan.participant_action_items %></div>
  </div>
</div>

<div class="span11">
  <div class="span5">
    <h2 class="ap_blue">Advisor's Deadline</h2>
    <%= @coach_action_plan.coach_deadlines.strftime("%m/%d/%Y") %>
  </div>

  <div class="span5">
    <h2 class="ap_green">Participants's Deadline</h2>
    <%= @coach_action_plan.participant_deadlines.strftime("%m/%d/%Y") %>
  </div>

</div>

<div class="span11">
  <div class="span5">
    <h2 class="ap_blue">Sucess Indicators</h2>
    <div style="word-wrap:break-word;"><%= @coach_action_plan.success_indicators %></div>
  </div>


  <div class="span5">
    <h2 class="ap_blue">Follow Up Meetings</h2>
    <div style="word-wrap:break-word;"><%= @coach_action_plan.follow_up_meetings %></div>
  </div>
</div>
