<%= form_for(@support_request) do |f| %>
  <% if @support_request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@support_request.errors.count, "error") %> prohibited this support_request from being saved:</h2>

      <ul>
      <% @support_request.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="span8">
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "input-xxlarge", required: true %>
      </div>
      <div class="field">
        <%= f.label :email %>
        <%= f.text_field :email, class: "input-xxlarge", required: true %>
      </div>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, class: "input-xxlarge no-validation", rows: 5, required: true %>
      </div>
      <div class="field">
        <%= f.label :issue_time %>
        <%= f.text_field :issue_time, class: "input-xxlarge" %>
      </div>
      <div class="actions">
        <%= f.submit "Submit Request", class: "btn btn-large btn-primary roundedge" %>
      </div>
    </div>
  </div>
<% end %>
